const { v4: uuidv4 } = require('uuid');
const mongoose = require('mongoose');
const Schema = mongoose.Schema;

const newsScheme = new Schema(
  {
    id: {
      type: String,
      default: uuidv4(),
    },
    date: String,
    text: String,
    theme: String,
    user: Object,
  },
  { versionKey: false }
);

const News = mongoose.model('news', newsScheme);

module.exports = News;